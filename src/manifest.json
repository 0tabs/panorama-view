{
	"manifest_version": 2,
	"name": "Panorama View",
	"description": "Tab Groups with Panorama View",
	"version": "0.9.0",
	"icons": {
		"16": "gfx/logo/logo-16.png",
		"24": "gfx/logo/logo-24.png",
		"32": "gfx/logo/logo-32.png",
		"48": "gfx/logo/logo-48.png",
		"64": "gfx/logo/logo-64.png",
		"96": "gfx/logo/logo-96.png"
	},
	"applications": {
		"gecko": {
			"id": "{60e27487-c779-464c-8698-ad481b718d5f}"
		}
	},

	"commands": {
		"toggle_panorama_view": {
			"suggested_key": {
				"default": "Ctrl+Alt+F",
				"mac": "MacCtrl+Alt+F"
			},
			"description": "Toggle Panorama View"
		},
		"new_tab_group": {
			"suggested_key": {
				"default": "Ctrl+Alt+G",
				"mac": "MacCtrl+Alt+G"
			},
			"description": "New Tab Group"
		},
		"next_group": {
			"suggested_key": {
				"default": "Ctrl+Alt+W",
				"mac": "MacCtrl+Alt+W"
			},
			"description": "Go to the next Tab Group"
		},
		"previous_group": {
			"suggested_key": {
				"default": "Ctrl+Alt+Q",
				"mac": "MacCtrl+Alt+Q"
			},
			"description": "Go to the previous Tab Group"
		}
	},

	"background": {
		"page": "background/background.html"
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": "gfx/icon_dark.svg",
		"theme_icons": [{
			"light": "gfx/icon_light.svg",
			"dark": "gfx/icon_dark.svg",
			"size": 16
		},
		{
			"light": "gfx/icon_light.svg",
			"dark": "gfx/icon_dark.svg",
			"size": 32
		}]
	},

	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},

	"permissions": [
		"<all_urls>",
		"tabs",
		"tabHide",
		"storage",
		"sessions",
		"cookies",
		"downloads",
		"menus"
	]
}
